generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id   Int    @id @default(autoincrement())
  name String @unique

  posts          UserPost[]
  ChannelProfile ChannelProfile[]
}

model ChannelProfile {
  id   Int         @id @default(autoincrement())
  role ChannelRole @default(USER)

  channel    Channel @relation(fields: [channel_id], references: [id])
  user       User    @relation(fields: [user_id], references: [id])
  channel_id Int 
  user_id    Int 
}

model User {
  id                        Int      @id @default(autoincrement())
  email                     String   @unique
  hash                      String
  role                      Role     @default(USER)
  status                    Status   @default(PENDING)
  isConfirmedChangePassword Boolean  @default(false)
  created_at                DateTime @default(now())
  updated_at                DateTime @updatedAt

  files          UserFile[]
  profile        UserProfile?
  post           UserPost[]
  ChannelProfile ChannelProfile[]
}

model UserProfile {
  id    Int    @id @default(autoincrement())
  login String @unique

  country    String?
  city       String?
  birth_date String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  avatar  UserFile?
  user    User      @relation(fields: [user_id], references: [id])
  user_id Int       @unique
}

model UserFile {
  id            Int      @id @default(autoincrement())
  file_name     String
  original_name String
  size          Int
  mimetype      String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  user         User         @relation(fields: [user_id], references: [id])
  user_id      Int
  profile      UserProfile? @relation(fields: [profile_id], references: [id])
  profile_id   Int?         @unique
  user_post    UserPost?    @relation(fields: [user_post_id], references: [id])
  user_post_id Int?
}

model UserPost {
  id    Int        @id @default(autoincrement())
  text  String
  files UserFile[]

  author     User     @relation(fields: [author_id], references: [id])
  author_id  Int
  channel    Channel? @relation(fields: [channel_id], references: [id])
  channel_id Int?
}

enum Role {
  ADMIN
  USER
}

enum Status {
  PENDING
  ACTIVE
  BLOCKED
}

enum ChannelRole {
  CREATOR
  ADMIN
  USER
}
