generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int     @id @default(autoincrement())
  email                     String  @unique
  login                     String  @unique
  hash                      String
  verification_key          String? @default("")
  verification_timestamp    String? @default("")
  role                      Roles   @default(user)
  status                    Status  @default(pending)
  isConfirmedChangePassword Boolean @default(false)
}

enum Roles {
  admin
  user
}

enum Status {
  pending
  active
  blocked
}
